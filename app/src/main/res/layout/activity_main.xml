<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yousf.tictacgamemadebyyoussef.MainActivity">


    <GridLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/grid"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/tic"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView1"
            android:onClick="one"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView2"
            android:onClick="two"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView3"
            android:onClick="three"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView4"
            android:onClick="four"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView5"
            android:onClick="five"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView6"
            android:onClick="six"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView7"
            android:onClick="seven"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView8"
            android:onClick="eight"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/s"
            android:id="@+id/imageView9"
            android:onClick="nine"
            android:alpha="0" />

    </GridLayout>


    <GridLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/grid2"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image1"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image2"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image3"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image4"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image5"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image6"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image7"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image8"
            android:alpha="0" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/image9"
            android:alpha="0" />

    </GridLayout>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:id="@+id/l1"
        android:layout_marginTop="-80dp"
        android:layout_alignTop="@+id/grid"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignStart="@+id/grid"
        android:alpha="0" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/l2"
        android:alpha="0" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:id="@+id/l3"
        android:layout_alignTop="@+id/grid"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignStart="@+id/grid"
        android:layout_marginTop="80dp"
        android:alpha="0" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:id="@+id/l4"
        android:rotation="90"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/grid"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignStart="@+id/grid"
        android:layout_marginLeft="-80dp"
        android:alpha="0" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:rotation="90"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/l5"
        android:alpha="0" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/line"
        android:rotation="90"
        android:id="@+id/l6"
        android:layout_gravity="fill"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/grid"
        android:layout_alignLeft="@+id/grid"
        android:layout_alignStart="@+id/grid"
        android:layout_marginLeft="80dp"
        android:alpha="1"
        android:elevation="0dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/line"
        android:rotation="45"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/l7"
        android:alpha="0" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/line"
        android:rotation="135"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/l8"
        android:alpha="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/l3"
        android:layout_alignEnd="@+id/l3">

        <Button
            android:text="single player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="single" />

        <Button
            android:text="multiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="multi" />
    </LinearLayout>


</RelativeLayout>
